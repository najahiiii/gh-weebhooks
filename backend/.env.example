# Backend environment configuration

# Base
PORT=4000
PUBLIC_BASE_URL=http://localhost:4000
FRONTEND_BASE_URL=http://localhost:3000
DB_URL=sqlite:///./github_tg.sqlite3
TIMEZONE=Asia/Jakarta

# Admins (comma-separated Telegram user IDs)
ADMIN_USER_IDS=

# Telegram login bot
LOGIN_BOT_TOKEN=123456789:ABCDEF-your-telegram-bot-token
LOGIN_BOT_USERNAME=your_bot_username_without_at

# Sessions
SESSION_COOKIE_NAME=app_session
SESSION_DURATION_HOURS=24

# Clock skew control (optional)
TELEGRAM_LOGIN_CLOCK_SKEW_SECONDS=0
TELEGRAM_LOGIN_TTL_SECONDS=300

# Telegram API (leave default unless using a proxy)
TELEGRAM_API_BASE=https://api.telegram.org

# GitHub OAuth (optional but required for repository automation)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_SCOPES=repo admin:repo_hook
GITHUB_AUTO_WEBHOOK=true
GITHUB_USER_AGENT=gh-weebhooks
